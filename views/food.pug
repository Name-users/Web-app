doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/index.css')
        link(rel='stylesheet', href='/stylesheets/menu.css')
    body
        div.background_menu
            h1.title= title
            p.page= page
            p.description= description
            ul
                - for (var x = 0; x < names.length; x++)
                    div.certain_food
                        li
                            div.text
                                if is_admin
                                    a(href=page + '/' +names[x]) #{names[x]} (Edit)
                                else
                                    p= names[x]
                                p Description: #{descriptions[x]}
                                p Composition: #{compositions[x].toString()}
                                     // - for (var y = 0; y < compositions[x].length; y++)
                                     //     li= compositions[x][y]
                            div.image
                                img(src= images[x])
            if is_admin && names.length === 0
                form(method='POST', action= page + '/delete')
                    input.submit(value='Delete category of menu', type='submit')

            if is_admin
                li
                    div.board_on_background
                        a(href=page + '/add') Add food
                li
                    div.board_on_background
                        a(href='/admin/menu') Back
            else
                div.board_on_background
                    a(href='/menu') Back
            //img(src= image)

