doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        h1= page
        p= description
        ul
            - for (var x = 0; x < names.length; x++)
                li
                    p= names[x]
                    if is_admin
                        a(href=page + '/' +names[x]) Edit
                    p Description: #{descriptions[x]}
                    p Composition:
                         - for (var y = 0; y < compositions[x].length; y++)
                             li= compositions[x][y]
                    img(src= images[x])
        if is_admin && names.length === 0
            form(method='POST', action= page + '/delete')
                input(value='Delete category of menu', type='submit')
        if is_admin
            a(href=page + '/add') Add food
