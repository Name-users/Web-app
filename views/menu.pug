doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/index.css')
        link(rel='stylesheet', href='/stylesheets/menu.css')
    body
        div.background
            div.background_menu
                h1.title= title
                p.page= page
                p.description= description
                - for (var x = 0; x < list.length; x++)
                    - var name = list[x].split('/')[list[x].split('/').length - 1]
                    li
                        div.board_on_background
                            a(href=list[x]) #{name}
                if is_admin
                    div.board_on_background
                        a(href= '/admin') Назад
                    form(method='POST', action='/admin/menu/update')
                        input.text(name='type', value='', type='text', placeholder="Новая категория")
                        input.submit(value='Создать', type='submit')
                else
                    div.board_on_background
                        a(href= '/') Назад


